<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,200;0,300;0,500;0,700;1,200;1,300;1,500;1,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="css/reset.css">
  <link rel="stylesheet" href="css/style7.css">
  <title>CoachHer</title>
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a class="navLinks" href="/">Home</a></li>
        <li><a class="navLinks" href="/browsecoaches">Browse Coaches</a></li>
        <li><a class="navLinks" href="/signup">Sign Up</a></li>
        <li><a class="navLinks" href="/login">Log In</a></li>
      </ul>
    </nav>
  </header>
<main>
  <h1>Signup</h1>

  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post" class="signUpCreds" enctype="multipart/form-data">
      <div class="">

        <input type="text" placeholder="Username" class="formInputs" name="username">
      </div>
      <div class="">

        <input type="text" placeholder="First Name" class="formInputs" name="firstname">
      </div>
      <div class="">

        <input type="text" placeholder="Last Name" class="formInputs" name="lastname">
      </div>
      <div class="">

        <input type="text" placeholder="Email" class="formInputs" name="email">
      </div>
      <div class="">

        <input type="password" placeholder="Password" class="formInputs" name="password">
      </div>

      <div class="profileType">
        <span>Are you a:</span>
        <input type="radio" name="profiletype" value="coach">
        <label for="coach">coach?</label>
        <input type="radio" name="profiletype" value="athlete">
        <label for="athlete">or an athlete?</label>
      </div>

      <div class="profilePic">
        <label for="imagepath">Add Profile Picture</label>
        <input class="postImage" type="file" name="imagepath" placeholder="Upload Image">
      </div>



      <button type="submit" class="">Signup</button>
    </form>



    <p class="loginAlt">Already have an account? <a href="/login">Login</a></p>

</main>



    <footer>
      <p class="copy"> Copyright Â© 2021 CoachHer. All rights reserved.</p>
    </footer>
  </body>
  </html>
